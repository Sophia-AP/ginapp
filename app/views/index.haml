/ About
%section#about.section.about-section.light-section
  .container
    .row
      .col-md-6.col-md-offset-3
        .section-title.text-center
          %h1 About Us
          %h2= t('pedal_pusher').html_safe
          .title-icon
            %span
              %i= image_tag('pedal_pusher_logo.jpg', width: 25)
          %p.lead
            = t('about.blurb_before_accent').html_safe
            -#%span.re-tooltip.accent-color{ 'data-placement' => 'bottom', title: 'Nice Tooltip' } accent text is important!
            %span.accent-color= t('about.blurb_accent').html_safe
            = t('about.beans')
            = t('gin.blurb_accent').html_safe
            = t('about.blurb_after_accent')
        / Space
        .hr{ style: 'margin-bottom:50px;'}
/ Team
%section#team.section.about-section.light-section
  -#.section-overlay
  .container
    .row
      .col-md-6.col-md-offset-3
        .section-title.text-center
          %h1 Our Team
          %h2
            One
            %strong.accent-color Rough
            Crew
          .title-icon
            %span= image_tag('pedal_pusher_logo.jpg', width: 25)
    .row
      .col-xs-12.col-sm-6.col-md-3.col-md-offset-3
        .member-box
          .member-pic
            = image_tag('gin.jpg', width: 200)
          .member-details
            %h4= t('gin.full_name').html_safe
            %span.member-position= t('gin.title').html_safe
            %p= t('gin.blurb').html_safe
            %a.collapsed{ data: { 'toggle' => 'collapse' },  href: '#gin-show-more' }<
              = t('.see_more', name: t('gin.first_name'))
              %i.icon-arrow-right12
            #gin-show-more.collapse
              %p= t('gin.blurb_show_more').html_safe
      .col-xs-12.col-sm-6.col-md-3
        .member-box
          .member-pic
            = image_tag('tuff.jpg', width: 200)
          .member-details
            %h4= t('tuff.full_name').html_safe
            %span.member-position= t('tuff.title').html_safe
            %p= t('tuff.blurb').html_safe
            %a.collapsed{ data: { 'toggle' => 'collapse' },  href: '#tuff-show-more' }<
              = t('.see_more', name: t('tuff.first_name'))
              %i.icon-arrow-right12
            #tuff-show-more.collapse
              %p= t('tuff.blurb_show_more').html_safe
