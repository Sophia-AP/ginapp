/ Contact
%section#contact.section.contact-section.light-section
  .container
    .row
      .col-md-6.col-md-offset-3
        / Title
        .section-title.text-center
          %h1 Contact Us
          %h2
            Get In
            %strong.accent-color Touch
          .title-icon
            %span
              = image_tag('pedal_pusher_logo.jpg', width: 25)
          %p.lead
            = t('contact.blurb_before_accent').html_safe
            %span.re-tooltip.accent-color= t('contact.blurb_accent').html_safe
            = t('contact.blurb_after_accent').html_safe
        / Space
        .hr{ style: 'margin-bottom:50px;'}
    .row
      / Info Box
      .col-xs-12.col-sm-4.col-md-4.map-info-box
        %h3 Contact
        .hr{ style: 'margin-bottom:8px;'}
        %ul.icons-list
          %li
            %i.icon-phone-hang-up
            %strong Phone:
            = t('contact.phone').html_safe
          %li
            %i.icon-email2
            %strong Email:
            = t('contact.email').html_safe
        -#%li
            %i.icon-location3
            %strong Address:
            = t('contact.address').html_safe
        .hr{ style: 'margin-bottom:35px;'}
      / Contact Form
      .col-xs-12.col-sm-8.col-md-8
        #contant-form-bx.contant-form-bx
          .contact-loader
          -#%form#contact-form.contact-form{ action: '/sendmail', method: 'post', name: 'cform'}
          %form{ action: '/send_message', method: 'post', name: 'cform'}
            .row
              .col-md-6
                %label#name_label{ for: 'name'} Name
                %span.name-missing Please enter your name
                %input#name{name: 'name', size: '30', type: 'text', value: '' }
              .col-md-6
                %label#email_label{ for: 'e-mail'} Email
                %span.email-missing Please enter a valid e-mail
                %input#e-mail{name: 'email', size: '30', type: 'text', value: '' }
              .col-md-12
                %label#message_label{ for: 'message' } Message
                %span.message-missing Say something
                %textarea#message{ cols: '40', name: 'message', rows: '7' }
              .col-md-12.text-right
                %input#submit_btn.button{ name: 'submit', type: 'submit', value: 'Send Message' }
                / End Contact Section
